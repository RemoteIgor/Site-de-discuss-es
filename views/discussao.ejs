<%- include('partials/header.ejs'); -%>
<body> 
    <%- include('partials/navbar.ejs'); -%>
    <div class="card">
        <div class=" col text-center card-header">
          <h5><%= pergunta.titulo %></h5>
        </div>
        <div class="card-body">
          <blockquote class="blockquote mb-0">
            <p><%= pergunta.descricao %></p>
            <!--<footer class="blockquote-footer">Data</footer>-->
          </blockquote>
        </div>
    </div>
    <br>

    <form method="POST" action="/responder">
        <div class="col text-center">
            <h5>Responda:</h5>
        </div>
        <textarea class="form-control" id="resposta" name="resposta" rows="3"></textarea>
        <input type="hidden" name="id" value="<%= pergunta.id %>" id="id">
        <div class="col text-center mt-2">
            <button class="btn btn-info">Responder</button>
        </div>
    </form><br>
    
    <% respostas.forEach(resposta => { %>
      <div class="card">
        <div class="card-body">
          <blockquote class="blockquote mb-0">
            <p><%= resposta.corpo %></p>
            <!-- <footer class="blockquote-footer">Data</footer>-->
          </blockquote>
        </div>
     </div>
    <% }) %>



    
    
    
</body>
<%- include('partials/footer.ejs'); -%>